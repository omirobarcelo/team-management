{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@team-management/data/interfaces": ["libs/data/src/interfaces/index.ts"],
      "@team-management/data/types": ["libs/data/src/types/index.ts"],
      "@team-management/lazy/app-dashboard": ["libs/feature/lazy/app-dashboard/src/index.ts"],
      "@team-management/lazy/routines": ["libs/feature/lazy/routines/src/index.ts"],
      "@team-management/lazy/exercises": ["libs/feature/lazy/exercises/src/index.ts"],
      "@team-management/shared/auth": ["libs/feature/shared/auth/src/index.ts"],
      "@team-management/shared/app-services": ["libs/feature/shared/app-services/src/index.ts"],
      "@team-management/utils/http": ["libs/utils/http/src/index.ts"],
      "@team-management/utils/http/*": ["libs/utils/http/src/lib/*"],
      "@team-management-api/exercises": ["libs/feature/api/exercises/src/index.ts"],
      "@team-management-api/exercises/*": ["libs/feature/api/exercises/src/lib/*"],
      "@team-management-api/common": ["libs/feature/api/common/src/index.ts"],
      "@team-management-api/core": ["libs/feature/api/core/src/index.ts"],
      "@team-management-api/core/*": ["libs/feature/api/core/src/lib/*"],
      "@team-management-api/auth": ["libs/feature/api/auth/src/index.ts"],
      "@team-management-api/auth/*": ["libs/feature/api/auth/src/lib/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
